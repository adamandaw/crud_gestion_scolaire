{% extends 'base.html.twig' %}

{% block title %}Cr√©ation d'une Classe{% endblock %}
{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href=" {{ asset('css/classe/form.css') }}">
{% endblock %}

{% block content %}
{{parent()}}
<!-- JQUERY STEP -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-steps/1.1.0/jquery.steps.min.js"></script>
<div class="container mt-5 d-flex justify-content-center">
    {{ form_start(form) }}
        <div id="form-border">
            <!-- SECTION 1 -->
              {% if app.request.method == 'POST' %}
                        {% for message in app.flashes('crud_success') %}
                            <div class="alert alert-dismissible alert-success">
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                <strong>{{ message }}</strong>
                            </div>
                        {% endfor %}
                    {% endif %}  

            <h4 id="title">Enregistrement d'une classe</h4>
            
            <section id="section">
                  <div class="form-row">
                        <div class="form-group col-md-6">
                                        {{ form_label(form.niveau) }}
                                        {{form_widget(form.niveau)}}
                        </div>
                        <div class="form-group col-md-6">
                                {{ form_label(form.filiere) }}
                                {{form_widget(form.filiere)}}
                        </div>
                        <div class="form-group col-md-6">
                                        {{ form_label(form.professeurs) }}
                        {{form_widget(form.professeurs)}}
                        </div>
                        <div class="form-group col-md-6">
                                 {{ form_label(form.modules) }}
                        {{form_widget(form.modules)}}
                        </div>
                        <div class="d-flex justify-content-end col-12">
                                {{form_widget(form.save)}}
                         </div>
                    </div>

            </section> <!-- SECTION 2 -->
           </div>
     {{ form_end(form) }}
</div>

                  
{% endblock %}
